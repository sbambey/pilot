<% provide(:title, "Sign in") %>
<div class="row">
	<div class="col-md-6 col-md-offset-3 content">

		<h1>Sign in</h1>

		<% flash.each do |key, value| %>
	    	<div class="alert alert-<%= key %> top-m-20"><%= value %></div>
  		<% end %>
		
		<%= form_for(:session, url: sessions_path, :html => {:role => 'form'}) do |f| %>
			<div class"form-group">
				<%= f.label :email %>
	      <%= f.text_field :email, :class => 'form-control' %>
	      <span class="help-block"></span>
	    </div>

	    <div class"form-group">
	      <%= f.label :password %>
	      <%= f.password_field :password, :class => 'form-control' %>
	      <span class="help-block"></span>
	    </div>

			 <%= f.submit "Sign in", :class => "btn btn-primary btn-lg" %>
		<% end %>
		

		<p class="top-m-20">New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>