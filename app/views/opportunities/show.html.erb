<% provide(:title, @opportunity.opportunity_name) %>
<div class="row">
	<div class="col-md-12 content">
		
		<% flash.each do |key, value| %>
      <div class="alert alert-<%= key %> top-m-20"><%= value %></div>
    <% end %>

    <div class="row">
    	<div class="col-md-9">
    		<h1 class="lighter"><%= image_tag(@opportunity.airline.logo, :class => "company-logo") %> - <%= @opportunity.opportunity_name %></h1>
    	</div>
    	<div class="col-md-3"><%= rating(@opportunity.rating) %></div>
    </div>

    <% if @opportunity.hiring_status.blank? %>
		<table class="table table-bordered table-thick-border bottom-m-0 top-m-20 lighter">
			<thead>
				<tr>
					<th>Type</th>
					<th>Duration</th>
					<th>Post Graduation</th>
					<th>More Info</th>
				</tr>
			</thead>
			<tr>
				<td><%= @opportunity.program_type %></td>
				<td><%= @opportunity.duration %></td>
				<td><%= @opportunity.post_graduation %></td>
				<td><%= link_to(@opportunity.website[0], @opportunity.website[0]) %></td>
			</tr>
		</table>
		<% else %>
		<table class="table table-bordered table-thick-border bottom-m-0 top-m-20 lighter">
			<thead>
				<tr>
					<th>Type</th>
					<th>Hiring Status</th>
					<th>More Info</th>
				</tr>
			</thead>
			<tr>
				<td><%= @opportunity.program_type %></td>
				<td><%= @opportunity.hiring_status %></td>
				<td><%= link_to(@opportunity.website[0], @opportunity.website[0]) %></td>
			</tr>
		</table>
		<% end %>

		<% @opportunity.headings.each do |heading| %>
			<h2><%= heading.title %></h2>
			<% if heading.is_table %>
				<table class="table table-bordered top-m-20 lighter">
					<% heading.subheadings.each do |subheading| %>
						<tr>
							<td><%= subheading.title %></td>
							<td><%= subheading.paragraphs.first.content %></td>
						</tr>
					<% end %>
				</table>
			<% else %>
				<% heading.subheadings.each do |subheading| %>
					<% if !subheading.title.blank? %>
						<h2><%= subheading.title %></h2>
					<% end %>
					<% subheading.paragraphs.each do |paragraph| %>
						<p class="font-17"><%= paragraph.content %></p>
					<% end %>
				<% end %>
			<% end %>
		<% end %>

		<p class="font-17"></p>
		
	</div>
</div>	