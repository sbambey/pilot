<div class="panel panel-info">
	<div class="panel-heading">

		<div class="form-group">
			<%= f.label :title, "Table Row" %>
			<div class="row">
				<div class="col-md-3">
					
					<%= f.text_field :title, class: "form-control" %>
				</div>
				<div class="col-md-6">
					<%= add_table_value_fields(f) %>
				</div>

				<div class="col-md-3">
					<%= f.hidden_field :_destroy %>
					<%= link_to "Remove Table Row", '#', class: "remove_fields" %>
				</div>
			</div>
		</div>
	</div>
</div>