<% provide(:title, "Add opportunity") %>
<div class="row">
	<div class="col-md-10 col-md-offset-1 content">
		<h1>Add an opportunity</h1>

		<%= form_for(@opportunity, html: {:role => 'form'}) do |f| %>
			<div class="row">
				<div class="col-md-6">
					<%= render "shared/form_input_field", f: f, errors: @opportunity.errors, type: :airline %>
					<%= render "shared/form_input_field", f: f, errors: @opportunity.errors, type: :opportunity_name %>
					<%= render "shared/form_input_field", f: f, errors: @opportunity.errors, type: :program_type %>
					<%= render "shared/form_input_field", f: f, errors: @opportunity.errors, type: :duration %>
					<%= render "shared/form_input_field", f: f, errors: @opportunity.errors, type: :post_graduation %>
				</div>
				<div class="col-md-6">
					<%= render "shared/form_input_field", f: f, errors: @opportunity.errors, type: :website %>
					<%= render "shared/form_input_field", f: f, errors: @opportunity.errors, type: :website %>
					<%= render "shared/form_input_field", f: f, errors: @opportunity.errors, type: :hiring_status %>
					<%= render "shared/form_input_field", f: f, errors: @opportunity.errors, type: :rating %>
				</div>
			</div>

			<%= add_fields f, :headings %>

			<%= link_to_add_fields "Add Heading", f, :headings %><br /><br />

			<%= f.submit class: "btn btn-primary btn-lg" %>
					
		<% end %>
	</div>
</div>