<% errors = @user.errors %>
<div class="row">
  <div class="col-md-12">
  	<div class="form-box">
  		<div class="row">
  			<div class="col-md-6 col-md-offset-3">
  				<h1>Sign up</h1>
			    <%= form_for(@user, :html => {:role => 'form'}) do |f| %>

			    	<%= render 'shared/error_messages' %>

			    	<%= render partial: "form_input", locals: { f: f, errors: errors, type: :name } %>

			    	<%= render partial: "form_input", locals: { f: f, errors: errors, type: :email } %>

			    	<%= render partial: "form_input", locals: { f: f, errors: errors, type: :password } %>

			    	<%= render partial: "form_input", locals: { f: f, errors: errors, type: :password_confirmation } %>

			      <%= f.submit "Create my account", :class => "btn btn-primary btn-lg" %>
			    <% end %>
				</div>
			</div>
		</div>
  </div>
</div>